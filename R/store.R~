xapian_store <- function()
{
  db<-c("/home/amanda/Documents/TestXapian/DDatabase")
  data<-read.csv("/home/amanda/Documents/TestXapian/DDatabase/100-objects-v1.csv")
  id<-c(0)
  indexFields<-list(list(index=2,prefix="S"),list(index=8,prefix="XD"))
  filterFields<-list(list(index=6,prefix="XM",separator=";"))
  xapian_index(db,data,id,indexFields,filterFields,"en")
  
  
  #searching
  
  query<-list(queryString="watch",
              prefix.fields=list(list(prefix="S",name="title"),
                                 list(prefix="XD",name="description")),
              stemmer="en")
  
  
  d<-xapian_search(db,query)
  d
}
